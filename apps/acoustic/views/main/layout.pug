doctype html
html
	block params
	head
		include header
	body
		.outer_block
			.header_block
				input.search_block(type='text', placeholder='search')
				a.logo_block(href='/'): img(src='/stuff/acoustic/icons/logo.svg')
				.menu_block
					a(href='/live') live
					a(href='/news') news
					a(href='/merch') merch
					a(href='/about') about


			.content_block
				block content


			.footer_block
				input.subscribe_block(type='text', placeholder='subscribe')
				.down_block
					a(href='/contacts') contacts


		include counters.pug