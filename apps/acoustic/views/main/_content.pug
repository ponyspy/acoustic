.content_body
	if (content.embed && content.embed.provider)
		if (content.embed.provider == 'youtube')
			.content_embed: iframe.embed(src='https://www.youtube.com/embed/' + content.embed.id, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
		else if (content.embed.provider == 'vimeo')
			.content_embed: iframe.embed(src='https://player.vimeo.com/video/' + content.embed.id, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
		else if (content.embed.provider == 'soundcloud')
			.content_embed: iframe.embed(src='https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/' + content.embed.id, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
	else
		img.content_cover(src=content.cover)
	.content_date= moment(content.date).locale('ru').format('DD.MM.YY')
	.content_title= content.title
	.content_intro!= content.intro
	.content_description!= content.description

