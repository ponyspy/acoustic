@media screen and (max-width: 980px)
	@import 'mobile/_content.styl'

.content_body
	.content_embed
		width 100%
		position relative
		padding-bottom 56.25% /* 16:9 */
		padding-top 0px
		height 0
		.embed
			position absolute
			top 0
			left 0
			width 100%
			height 100%
	.content_cover
		width 100%
		display block
	.content_date
		font 12pt/14pt 'Arial'
		margin-top 20px
	.content_title
		margin-top 20px
		font 22pt/24pt 'Arial'
		text-indent 40px
		box-sizing border-box
	.content_intro
		margin-top 20px
		text-indent 40px
		font 14pt/22pt 'Arial'
	.content_description
		margin-top 20px
		font 14pt/22pt 'Arial'
		img
			width 100%


.content_share
	margin-top 60px
	a
		font 22pt/24pt 'Arial'
		text-decoration none
		color blue
		&:hover
			display inline-block
			border-bottom 2px solid blue