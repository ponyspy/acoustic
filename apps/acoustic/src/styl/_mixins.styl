event-item()
	width 33.333333333%
	padding-right 40px
	box-sizing border-box
	display inline-block
	vertical-align top
	margin-bottom 40px
	text-decoration none
	color rgb(86, 86, 86)
	&:hover
		color white
		.event_title
			color white
	&.hidden
		display none
	.event_num
		font 22pt/28pt 'Arial'
	.event_title
		font 22pt/28pt 'Arial'
		border-bottom 2px solid transparent
		text-decoration none
		color rgb(86, 86, 86)
		&:hover
			border-bottom 2px solid white
			color white
	.event_type
		font 22pt/28pt 'Arial'
		font-style italic
		&.active span
			border-bottom 2px dotted rgb(86, 86, 86)
		span
			cursor pointer
			border-bottom 2px solid transparent
			&:hover
				border-bottom 2px dotted white


news-item()
	padding-right 20px
	box-sizing border-box
	margin-bottom 40px
	cursor pointer
	text-decoration none
	display block
	color rgb(86, 86, 86)
	&:hover
		opacity 1
		.news_title span
			color white
			border-bottom 2px solid white
		.news_date
			color white
	.news_date
		font 12pt/14pt 'Arial'
	.news_title
		margin-top 15px
		text-indent 40px
		font 22pt/28pt 'Arial'
		display inline-block
		text-decoration none
		span
			border-bottom 2px solid transparent

