@import '_fonts.styl'
@import '_mixins.styl'

@media screen and (max-width: 960px)
	@import 'mobile/_global.styl'

html
body
	margin 0
	padding 0
	background-color black
	color white

a
	color white


.header_block
	padding-left 20px
	padding-right 20px
	width 100%
	position fixed
	box-sizing border-box
	background-color black
	top 0
	z-index 9999
	.header_main
		// background-color green
		display flex
		justify-content space-between
		align-items center
		.menu_open
		.search_logo
			position absolute
			top 22px
			width 30px
			height 30px
			background-position center
			background-repeat no-repeat
			background-size contain
			cursor pointer
			display none
		.search_logo
			left 20px
		.menu_open
			right 20px
		.search_input
			&::placeholder
				opacity 1
				color rgb(86, 86, 86)
			-webkit-appearance: none;
			border-radius 0
			padding 0
			display inline-block
			border none
			outline none
			background-color transparent
			color white
			font 22pt/24pt 'Arial'
			min-width 120px
			// flex 2
		.logo_block
			// flex 2
			margin-left 20px
			margin-right 20px
			img
				width 280px
				display block
		.menu_spacer
			// flex 0.7
			width 280px
			height 21px
			// background-color red
	.header_down
		.search_logo
		.menu_close
			position absolute
			top 22px
			right 20px
			width 35px
			height 35px
			display none
			background-position center
			background-repeat no-repeat
			background-size contain
			cursor pointer
			&.show
				display block
		.menu_block
			right 20px
			position absolute
			top 22px
			font 22pt/24pt 'Arial'
			z-index 99999
			&.show
				display block!important
			&.hidden
				display none
			a
				margin-right 10px
				text-decoration none
				&.disabled
					color rgb(86, 86, 86)
					pointer-events none
				&:last-child
					margin-right 0
				&:hover span
				&.active span
					border-bottom 2px solid white


.content_block
.search_block
	.panel_block
		width 50%
		height 100%
		position absolute
		overflow scroll
		padding-top 100px
		padding-bottom 200px
		box-sizing border-box
		padding-left 20px
		padding-right 20px
		scrollbar-width none
		-webkit-overflow-scrolling: touch
		&::-webkit-scrollbar
			display none
		.panel_inner
			max-width 920px
			width 100%
		&.left
			left 0
			.panel_inner
				float right
		&.right
			right 0
			.panel_inner
				float left


.search_block
	position absolute
	width 100%
	height 100%
	overflow hidden
	background-color black
	display none
	.context_title
		font 22pt/24pt 'Arial'
		color rgb(86, 86, 86)
		margin-bottom 40px
	.result_item
		&.event
			event-item()
		&.news
			news-item()
	&.show
		display block


.footer_block
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	width 100%
	z-index 9999999
	position fixed
	bottom 0
	padding-bottom 20px
	padding-top 10px
	background-color black
	overflow hidden
	&.show
		display block
	.subscribe_block
		-webkit-appearance: none;
		border-radius 0
		padding 0
		display inline-block
		border none
		outline none
		background-color black
		color white
		font 22pt/24pt 'Arial'
		&::placeholder
			opacity 1
			color rgb(86, 86, 86)
	.down_block
		float right
		font 22pt/24pt 'Arial'
		a
			margin-right 10px
			text-decoration none
			&:last-child
				margin-right 0
			&:hover
			&.active
				border-bottom 2px solid white
