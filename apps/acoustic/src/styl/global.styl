@import '_fonts.styl'
@import '_mixins.styl'

@media screen and (max-width: 960px)
	@import 'mobile/_global.styl'

html
body
	margin 0
	padding 0
	background-color black
	color white

a
	color white


.header_block
	display flex
	justify-content space-between
	align-items center
	padding-left 20px
	padding-right 20px
	width 100%
	position fixed
	box-sizing border-box
	background-color black
	top 0
	z-index 9999
	.search_input
		&::placeholder
			opacity 1
			color: rgb(86, 86, 86)
		-webkit-appearance: none;
		border-radius 0
		padding 0
		display inline-block
		border none
		outline none
		background-color transparent
		color white
		font 22pt/24pt 'Arial'
		flex 2
		min-width 120px
	.logo_block
		flex 2
		margin-left 20px
		margin-right 20px
		img
			width 280px
			display block
	.menu_block
		flex 0.5
		font 22pt/24pt 'Arial'
		a
			margin-right 10px
			text-decoration none
			&.disabled
				color rgb(86, 86, 86)
				pointer-events none
			&:last-child
				margin-right 0
			&:hover
			&.active
				border-bottom 2px solid white


.content_block
.search_block
	.panel_block
		width 50%
		height 100%
		position absolute
		overflow scroll
		padding-top 100px
		padding-bottom 200px
		box-sizing border-box
		padding-left 20px
		padding-right 20px
		scrollbar-width none
		&::-webkit-scrollbar
			display none
		.panel_inner
			max-width 920px
			width 100%
		&.left
			left 0
			.panel_inner
				float right
		&.right
			right 0
			.panel_inner
				float left


.result_item
	&.event
		event-item()
	&.news
		news-item()


.search_block
	position absolute
	width 100%
	height 100%
	overflow hidden
	background-color black
	display none
	&.show
		display block


.footer_block
	padding-left 20px
	padding-right 20px
	box-sizing border-box
	width 100%
	position fixed
	bottom 0
	padding-bottom 20px
	padding-top 10px
	background-color black
	.subscribe_block
		-webkit-appearance: none;
		border-radius 0
		padding 0
		display inline-block
		border none
		outline none
		background-color black
		color white
		font 22pt/24pt 'Arial'
		&::placeholder
			opacity 1
			color: rgb(86, 86, 86)
	.down_block
		float right
		font 22pt/24pt 'Arial'
		a
			margin-right 10px
			text-decoration none
			&:last-child
				margin-right 0
			&:hover
			&.active
				border-bottom 2px solid white